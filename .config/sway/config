### Autostart
exec wl-paste --type text --watch cliphist store
exec wl-paste --type image --watch cliphist store
exec wl-paste --type text --primary --watch cliphist store
exec wl-paste --type image --primary --watch cliphist store
exec nm-applet
exec swaync
exec kanshi

exec_always {
    gsettings set org.gnome.desktop.interface cursor-theme 'Breeze_Light'
    gsettings set org.gnome.desktop.interface cursor-size 36
    gsettings set org.gnome.desktop.interface icon-theme 'Papirus'
}

include /etc/sway/config.d/*
include ~/.config/nwg-displays/sway
